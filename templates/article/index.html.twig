{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!
{% endblock %}

{% block body %}
	<h1>{{ article.title }}</h1>
	<p>{{ article.content }}</p>

	{% if not formFields is same as([]) %}
		<form action="{{ path('article', {'id': article.id}) }}" method="post">
			{% for formField in formFields %}
				{% include 'components/' ~ formField.type ~ '_type.html.twig' with {'field': formField} %}
			{% endfor %}
			<button type="submit">Valider</button>
		</form>
	{% endif %}
	{% if not formData is same as([]) %}
		<table>
			<thead>
				<tr>
					<th>Nom</th>
					<th>Pr√©nom</th>
					{% for field in formFields %}
						<th>{{ field.name }}</th>
					{% endfor %}
				</tr>
			</thead>
			<tbody>
				{% for value in formData %}
					<tr>
						<td></td>
						<td></td>
						{% for item in value %}
							<td>{{ item }}</td>
						{% endfor %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}
{% endblock %}
